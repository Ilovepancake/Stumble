<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/WindowR"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="App settings"
                android:textColor="@color/colorPrimaryLight"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:layout_height="match_parent" />

            <!--Dark theme view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:id="@+id/darkThemeLayout"
                android:paddingBottom="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Switch
                        android:layout_width="45dp"
                        android:id="@+id/DarkModeSwitch"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:text="Dark theme."
                        android:gravity="center"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="1dp"/>

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:text="Account settings"
                android:textColor="@color/colorPrimaryLight"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent" />

            <!--User account-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:id="@+id/FilterBtn"
                android:paddingBottom="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="40dp"
                        android:background="@drawable/ic_action_filter"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:text="Filter content."
                        android:gravity="center"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <!--Logout view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:id="@+id/LogoutLayout"
                android:paddingBottom="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="40dp"
                        android:background="@drawable/ic_action_logout"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:text="Logout."
                        android:gravity="center"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"/>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:text="Others"
                android:textColor="@color/colorPrimaryLight"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent" />


            <!--Feedback-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:id="@+id/FeedbackView"
                android:paddingBottom="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="40dp"
                        android:background="@drawable/ic_action_feedback"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:text="Feedback."
                        android:gravity="center"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <!--App version-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:id="@+id/VersiontLayout"
                android:paddingBottom="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="40dp"
                        android:background="@drawable/ic_action_version"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:text="App Version:  v1.0"
                        android:gravity="center"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="1dp"/>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>