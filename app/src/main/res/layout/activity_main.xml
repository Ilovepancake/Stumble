<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPager"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/previousBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_previous"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/previousText"
                android:text="Previous."
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_next"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/nextText"
                android:text="Next."
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/shareText"
                android:text="Share."
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/pinBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_pin"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pinText"
                android:text="Pin."
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/setingsBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/settingsText"
                android:text="Settings."
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>